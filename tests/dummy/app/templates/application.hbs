<h2 id="title">Welcome to Ember</h2>

<h3>Enter Value</h3>
{{textarea value=value}}

<h3>Sanitized</h3>
{{sanitize-html value=value}}

<h3>Block Params</h3>
{{#sanitize-html
	value=value as
|sanitizedValue|}}
	{{sanitizedValue}}
{{/sanitize-html}}

<h3>Sanitized Raw</h3>
{{sanitize-html value=value raw=true}}

<h3>Raw Block Params</h3>
{{#sanitize-html
	value=value as
|sanitizedValue|}}
	{{{sanitizedValue}}}
{{/sanitize-html}}
